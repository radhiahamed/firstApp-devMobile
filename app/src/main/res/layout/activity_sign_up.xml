<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="40sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="30sp"
                android:text="Welcome \nPlease sign up here!"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-70dp"
                android:src="@drawable/logo" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
      android:layout_marginTop="1sp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="35sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/user_name_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
           android:hint="firstNameLastName"
            android:inputType="text"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/email_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:drawableEnd="@drawable/ic_email"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIN :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cin_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:drawableEnd="@drawable/ic_cin"
            android:hint="-------"
            android:inputType="number"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Password :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:drawableEnd="@drawable/red_eye_24"
            android:hint="********"
            android:inputType="textPassword" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Confirm Password :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/confirm_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:drawableEnd="@drawable/red_eye_24"
            android:hint="********"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN UP"  android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:cornerRadius="20sp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/go_to_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </LinearLayout>








    </LinearLayout>
</ScrollView>